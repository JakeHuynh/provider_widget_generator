<idea-plugin>
    <id>huan.huynh.provider_widget_generator</id>
    <name>Provider Widget Generator</name>
    <version>1.0.1</version>
    <vendor email="thanhhuan1990@gmail.com" url="https://github.com/thanhhuan1990">ThanhHuan.VN</vendor>

    <description><![CDATA[
     Quickly to generate flutter Provider Widget with Model by Flutter Provider Template.<br>
    Generates Widget, Model classes.<br>
    Supports both StatefulWidget and StatelessWidget.<br>
    <a href="https://github.com/thanhhuan1990/provider_widget_generator">https://github.com/thanhhuan1990/provider_widget_generator</a>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <depends>Dart</depends>
    <depends>io.flutter</depends>

    <!-- Minimum and maximum build of IDE compatible with the plugin -->
    <idea-version since-build="191.8026" until-build="193.*"/>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="provider_widget_generator.action.GenerateWidgetAction"
                class="provider_widget_generator.action.GenerateWidgetAction"
                text="Widget Generate"
                description="Generate a new widget with Provider"
                icon="/icons/dart_file.svg">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
